            onAction="#processFunction"
            style="-fx-background-color: #FFA500; -fx-text-fill: black; -fx-font-size: 20px; -fx-pref-width: 75;"/>

    <Button text="÷"
            GridPane.columnIndex="3"
            GridPane.rowIndex="1"
            onAction="#processOperator"
            style="-fx-background-color: #FFA500; -fx-text-fill: black; -fx-font-size: 20px; -fx-pref-width: 75;"/>


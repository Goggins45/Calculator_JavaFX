<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="com.example.calculator.CalculatorController"
          xmlns:fx="http://javafx.com/fxml"
          alignment="CENTER"
          hgap="5"
          vgap="5"
          style="-fx-background-color: #292929;">

    <Label fx:id="display"
           text="0"
           GridPane.columnIndex="0"
           GridPane.rowIndex="0"
           GridPane.columnSpan="7"
           style="-fx-background-color: #444444; -fx-text-fill: white; -fx-font-size: 30px; -fx-alignment: CENTER; -fx-padding: 20px; -fx-border-color: black; -fx-border-width: 1px; -fx-pref-width: 550; -fx-alignment: center;"/>
    <Button text="C"
            GridPane.columnIndex="0"
            GridPane.rowIndex="1"
            onAction="#processFunction"
            style="-fx-background-color: #FF3333; -fx-text-fill: black; -fx-font-size: 20px; -fx-pref-width: 75;"/>

    <Button text="CE"
            GridPane.columnIndex="1"
            GridPane.rowIndex="1"
            onAction="#processFunction"
            style="-fx-background-color: #FF3333; -fx-text-fill: black; -fx-font-size: 20px; -fx-pref-width: 75;"/>

    <Button text="±"
            GridPane.columnIndex="2"
